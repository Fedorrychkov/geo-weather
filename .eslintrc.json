{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier/react"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
        "prettier/prettier": ["error", { "singleQuote": true }, { "semi": true }],
        "react/forbid-prop-types": [true],
        "indent": ["error", 2]
    }
}